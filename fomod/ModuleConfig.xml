<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://qconsulting.ca/fo3/ModConfig5.0.xsd">
	<moduleName>Skyrim Unlocked</moduleName>
	<installSteps order="Explicit">
		<installStep name="Skyrim Unlocked">
			<optionalFileGroups order="Explicit">
				<group name="Skyrim Unlocked" type="SelectAny">
					<plugins order="Explicit">
						<plugin name="Main File">
							<description>
								Friendly reminder: You must load this mod at the end of your load order or you will break stuff!
							</description>
							<files>
								<folder source="Skyrim Unlocked" destination="" priority="0"/>
							</files>
							<typeDescriptor>
								<type name="Required"/>
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
			</optionalFileGroups>
		</installStep>
		<installStep name="Compatibility Patches">
			<optionalFileGroups order="Explicit">
				<group name="Compatibility Patches" type="SelectAny">
					<plugins order="Explicit">
						<plugin name="Alternate Start - Live Another Life">
							<description>
								Requires Alternate Start - Live Another Life. Resolves all conflicts between the two mods.
							</description>
							<files>
								<folder source="Skyrim Unlocked - LAL" destination="" priority="0"/>
							</files>
							<typeDescriptor>
								<dependencyType>
									<defaultType name="Optional"/>
									<patterns>
										<pattern>
											<dependencies operator="And">
												<fileDependency file="Alternate Start - Live Another Life.esp" state="Active"/>
											</dependencies>
											<type name="Recommended"/>
										</pattern>
									</patterns>
								</dependencyType>
							</typeDescriptor>
						</plugin>
						<plugin name="Enhanced Skyrim Factions - The Companions Guild">
							<description>
								Requires Enhanced Skyrim Factions - The Companions Guild. Resolves all conflicts between the two mods.
							</description>
							<files>
								<folder source="Skyrim Unlocked - ESF" destination="" priority="0"/>
							</files>
							<typeDescriptor>
								<dependencyType>
									<defaultType name="Optional"/>
									<patterns>
										<pattern>
											<dependencies operator="And">
												<fileDependency file="ESFCompanions.esp" state="Active"/>
											</dependencies>
											<type name="Recommended"/>
										</pattern>
									</patterns>
								</dependencyType>
							</typeDescriptor>
						</plugin>
						<plugin name="Immersive College of Winterhold">
							<description>
								Requires Immersive College of Winterhold. Resolves all conflicts between the two mods.
							</description>
							<files>
								<folder source="Skyrim Unlocked - CWI" destination="" priority="0"/>
							</files>
							<typeDescriptor>
								<dependencyType>
									<defaultType name="Optional"/>
									<patterns>
										<pattern>
											<dependencies operator="And">
												<fileDependency file="CollegeOfWinterholdImmersive.esp" state="Active"/>
											</dependencies>
											<type name="Recommended"/>
										</pattern>
									</patterns>
								</dependencyType>
							</typeDescriptor>
						</plugin>
						<plugin name="Open Cities Skyrim">
							<description>
								Requires Open Cities Skyrim. Resolves all conflicts between the two mods.
							</description>
							<files>
								<folder source="Skyrim Unlocked - OCS" destination="" priority="0"/>
							</files>
							<typeDescriptor>
								<dependencyType>
									<defaultType name="Optional"/>
									<patterns>
										<pattern>
											<dependencies operator="And">
												<fileDependency file="Open Cities Skyrim.esp" state="Active"/>
											</dependencies>
											<type name="Recommended"/>
										</pattern>
									</patterns>
								</dependencyType>
							</typeDescriptor>
						</plugin>
					</plugins>
				</group>
			</optionalFileGroups>
		</installStep>
	</installSteps>
</config>